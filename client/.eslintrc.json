{
    "extends": ["react-app", "plugin:jsx-a11y/recommended"],
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./",
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "ignorePatterns": ["/src/pages/typescript/**/*", "/src/**/*.js"],
    // add new rules here
    "rules": {},
    "plugins": ["jsx-a11y"],
    "overrides": [
        {
            "files": ["**/*.(j|t)s?(x)"],
            "rules": {
                "array-callback-return": "off"
            }
        }
    ]
}
