{
    "extends": ["react-app"],
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./",
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "ignorePatterns": ["/src/pages/typescript/**/*"],
    // add new rules here
    "rules": {},
    "overrides": [
        {
            "files": ["**/*.(j|t)s?(x)"],
            "rules": {
                "array-callback-return": "off"
            }
        }
    ]
}
