{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
      "module": "ES2022",
      "moduleResolution": "Bundler",
    "target": "es6",
    "lib": ["es2015", "es2017", "es2022", "dom"],
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
      "paths": {
          "#src/*": ["./*"]
      }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
